{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++.exe 生成活动文件",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wshadow",
                "-DLOCAL",
                "-Wall",
                "-std=c++17",
                "-ftemplate-depth=1000000",
                "-I/media/yuxinhao/data/code/programs/CP-template",
                "-IE:/code/programs/CP-template"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。",
        }
    ],
    "version": "2.0.0"
}